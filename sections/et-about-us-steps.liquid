<link rel="stylesheet" href="{{ 'et-style.css' | asset_url }}">
<section class="section et-about-steps-section">
    <div class="page-width">
        <div class="et-about-steps-wrap">
            {% for block in section.blocks %}
                <div class="step-item">
                    <div class="step-icon">
                        <img src="{{ block.settings.step_icon | img_url: 'master' }}" alt="">
                    </div>
                    <h4 class="step-title">{{block.settings.step_title}}</h4>
                    <p class="step-des">{{block.settings.step_des}}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>



{%- style -%}
    .et-about-steps-section {
      padding: 0 40px;
    }
    .et-about-steps-wrap .step-item .step-icon {
        background-color: {{section.settings.step_item_bg_clr}};
    }
    {% if section.settings.section_top_margin %}
      #shopify-section-{{ section.id }} {
        margin-top: 30px;
      }
    {% endif %}
    {% if section.settings.section_bottom_margin %}
      #shopify-section-{{ section.id }} {
        margin-bottom: 30px;
      }
    {% endif %}
{%- endstyle -%}

  
  {% schema %}
    {
      "name": "ET About Us Steps",
      "max_blocks": 8,
      "settings": [
        {
          "type": "checkbox",
          "id": "section_top_margin",
          "label": "Add section top margin",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "section_bottom_margin",
          "label": "Add section bottom margin",
          "default": false
        },
        {
            "type": "color",
            "id": "step_item_bg_clr",
            "label": "Step Item color",
            "default": "#EFF0F2"
        }
      ],
      "blocks": [
        {
          "type": "step",
          "name": "Step item",
          "limit": 3,
          "settings": [
            {
              "type": "image_picker",
              "id": "step_icon",
              "label": "Step icon"
            },
            {
              "type": "text",
              "id": "step_title",
              "label": "Step Title",
              "default": "Superior Quality & Design"
            },
            {
              "type": "text",
              "id": "step_des",
              "label": "Step Description",
              "default": "All of our art and designs are top notch from our officially licensed partnership products and non-licensed products...You'll be the elite fan you're destined to be!"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "ET About Us Steps",
          "category": "fathead"
        }
      ]
    }
  {% endschema %}