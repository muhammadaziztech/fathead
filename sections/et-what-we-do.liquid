<section class="section et-what-wedo-section">
    <div class="page-width">
        <div class="et-what-wedo-wrap">
            <div class="left-cont">
              {%- unless section.settings.section_img == blank -%}
                <div class="img-wrap">
                    {{ section.settings.section_img | image_url: width: full | image_tag }}
                </div>
              {% endunless %}
            </div>
            <div class="right-cont">
                <h2 class="title">{{section.settings.section_title}}</h2>
                <div class="et-accordion-wrap">
                    <div id="accordion" class="accordion">
                        {% for block in section.blocks %}
                            <div class="accordion-item">
                                <div class="accordion-title">{{block.settings.accordion_title}}</div>
                                <div class="accordion-des">
                                    {{block.settings.accordion_des}}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <a class="button" href="{{section.settings.section_cta}}">{{section.settings.section_cta_label}}</a>
            </div>
        </div>
    </div>
</section>

{%- style -%}
    .et-what-wedo-section {
        padding-left: 40px;
        padding-right: 40px;
        background-color: {{section.settings.section_bg}};
    }
    .et-what-wedo-wrap .img-wrap {
        background-color: {{section.settings.section_img_bg}};
    }
    .accordion-title,
    .accordion-des,
    .accordion-des p {
        color: {{section.settings.section_content_clr}};
    }
    .et-what-wedo-wrap .right-cont a.button {
        background-color: {{section.settings.section_cta_bg}};
        color: {{section.settings.section_cta_clr}};
    }
    {% if section.settings.section_top_margin %}
      #shopify-section-{{ section.id }}{
        margin-top: 30px;
      }
    {% endif %}
    {% if section.settings.section_bottom_margin %}
      #shopify-section-{{ section.id }} {
        margin-bottom: 30px;
      }
    {% endif %}
{%- endstyle -%}

  
  {% schema %}
    {
      "name": "ET What We do",
      "max_blocks": 8,
      "settings": [
        {
          "type": "checkbox",
          "id": "section_top_margin",
          "label": "Add section top margin",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "section_bottom_margin",
          "label": "Add section bottom margin",
          "default": false
        },
        {
            "type": "image_picker",
            "id": "section_img",
            "label": "Section Image"
        },
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "What we do"
        },
        {
            "type": "url",
            "id": "section_cta",
            "label": "Section CTA"
        },
        {
            "type": "text",
            "id": "section_cta_label",
            "label": "Section CTA Label",
            "default": "GET STARTED!"
        },
        {
            "type": "color",
            "id": "section_img_bg",
            "label": "Image BG color",
            "default": "#3BA715"
        },
        {
            "type": "color",
            "id": "section_bg",
            "label": "Section BG color",
            "default": "#EFF0F2"
        },
        {
            "type": "color",
            "id": "section_content_clr",
            "label": "Section Content color",
            "default": "#505561"
        },
        {
            "type": "color",
            "id": "section_cta_bg",
            "label": "Section CTA BG color",
            "default": "#D33901"
        },
        {
            "type": "color",
            "id": "section_cta_clr",
            "label": "Section CTA label color",
            "default": "#fff"
        }
      ],
      "blocks": [
        {
          "type": "accordion",
          "name": "accordion item",
          "limit": 8,
          "settings": [
            {
              "type": "text",
              "id": "accordion_title",
              "label": "Accordion Title",
              "default": "WALL DECALS"
            },
            {
              "type": "textarea",
              "id": "accordion_des",
              "label": "Accordion Description",
              "default": "Our wall decals are the best in the game. Removable, reusable, high quality vinyl meant to last."
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "ET What We do",
          "category": "fathead"
        }
      ]
    }
  {% endschema %}